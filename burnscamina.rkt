(define (consola x y press t) 
  (cond
    ( (and (> x -290) (equal? press 'left))  (mov-burns-left   x y t))
    ( (and (< x 440)(equal? press 'right)) (mov-burns-right  x y t))
    ( (equal? press 'up) (mov-bala-right  x y x))
    ( (equal? press 'down) (mov-bala-left  x y x))
    (else (consola x y (key-value (get-key-press ventana)) t))
    )
  )



     
