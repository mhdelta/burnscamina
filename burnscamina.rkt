(define (mov-bala-left  x y z)
  (if (or  (>= x 480) (<= x -390))
      (consola z 0 (key-value (get-key-press ventana)) t)
      (begin
        ((draw-pixmap fondo) "back3.png" (make-posn 0 0))
        (((draw-pixmap-posn (mov-img-burns-left 3)) fondo) (make-posn z 90))
        (((draw-pixmap-posn (mov-img-bala 1)) fondo) (make-posn x 90))
        (copy-viewport fondo ventana)
        (clear-viewport fondo)
        (mov-bala-left  (- x 90) y z)
        )
      )
  )

(define (mov-bala-right  x y z)
